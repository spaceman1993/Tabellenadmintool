<html>
	<head>
		<title>MitStuPro</title>
		<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="/stylesheets/style.css">

		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js"></script>
		<script src="/javascripts/mitStuProApp.js"></script>
		<script src="/javascripts/ui-bootstrap-tpls-0.12.1.min.js"></script>
		<style> .glyphicon-thumbs-up { cursor:pointer } </style>
	</head>
	<body ng-app="mitStuPro">
	  
		<div class="panel panel-default">
			<div class="col-md-6 col-md-offset-3">
				<ui-view></ui-view>
			</div>
		</div>

		<!-- table.html -->
		<script type="text/ng-template" id="/table.html">
			<div class="panel-heading">
				<h1>ÜBERSCHRIFT TABELLE</h1>
			</div>
			
			<!-- erstes Design -->
			<div ng-show="design == 1" class="panel-body">
      <div ng-controller="MenuController">
				<!-- Menü für erstes Design -->
				<div >
					 <!-- Simple dropdown -->
					<span ng-repeat="item in items" class="dropdown" dropdown>
					  <button class="dropdown-toggle" dropdown-toggle>
						{{item.title}} <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" role="menu">
						<li ng-repeat="team in item.teams">
							<a ng-click="getTableForLeague(team.link)">{{team.display}}</a>
						</li>
					  </ul>
					</span>
				</div>
				
				   
				<!-- ENDE Menü für erstes Design -->
				<!-- Tabelle für erstes Design -->
				<div>
					<table width="100%" ng-show="mannschaften">
            <thead>
              <tr>
      					<th>Rang</th>
      					<th>Mannschaft</th>
      					<th>Begegnungen</th>
      					<th>S</th>
      					<th>U</th>
      					<th>N</th>
      					<th>Tore</th>
      					<th>Verh&auml;ltnis</th>
                <th>Punkte</th>
      				</tr>
            </thead>
            <tbody>
              <tr ng-repeat="mannschaft in mannschaften | orderObjectBy:'rang':false" data-ng-class="isHighlight(mannschaft)">
                <td>{{mannschaft.rang}}</td>
          			<td>{{mannschaft.mannschaft}}</td>
          			<td>{{mannschaft.begegnungen}}</td>
          			<td>{{mannschaft.siege}}</td>
          			<td>{{mannschaft.unentschieden}}</td>
          			<td>{{mannschaft.niederlagen}}</td>
          			<td>{{mannschaft.tore}}</td>
          			<td>{{mannschaft.verhaeltnis}}</td>
                <td>{{mannschaft.punkte}}</td>
              </tr>
            </tbody>
          </table>	
          
          
          <table class="table table-striped table-condensed" width="100% ng-show="nextGames">
            <thead>
              <tr>
                <th>Tag</th>
                <th>Datum</th>
                <th>Zeit</th>
                <th>Halle</th>
                <th>Nr</th>
                <th>Heimmannschaft</th>
                <th>Gastmannschaft</th>
                <th>Tore</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="nextGame in nextGames">
                <td>{{nextGame.tag}}</td>
          			<td>{{nextGame.datum}}</td>
          			<td>{{nextGame.zeit}}</td>
          			<td>{{nextGame.halle}}</td>
          			<td>{{nextGame.nr}}</td>
          			<td>{{nextGame.heimmannschaft}}</td>
          			<td>{{nextGame.gastmannschaft}}</td>
                <td>{{nextGame.tore}}</td>
              </tr>
            </tbody>
          </table>
				</div>
        </div>
				<!-- ENDE Tabelle für erstes Design -->
			</div>
			<!-- ENDE erstes Design -->
			
			<!-- zweites Design -->
			<div ng-show="design == 2" class="panel-body">
				<!-- Menü für zweites Design -->
				Das muss nach links.
				<!-- ENDE Menü für zweites Design -->
				
				<!-- Tabelle für zweites Design -->
				Und das hier muss nach rechts.
				<!-- ENDE Tabelle für zweites Design -->
			</div>
			<!-- ENDE zweites Design -->
			
			<!-- Fußnavigation -->
			<div class="footer">
				<div class="btn-group" role="group" aria-label="...">
				<a type="button" class="btn btn-default" ng-click="design = 1">Design 1</a>
				<a type="button" class="btn btn-default" ng-click="design = 2">Design 2</a>
				</div>
				<a href="#/settings" type="button" class="btn btn-default glyphicon glyphicon-wrench"></a>
			</div>
			<!-- ENDE Fußnavigation -->
		</script>
		<!-- ENDE table.html -->
		
		<!-- settings.html -->
		<script type="text/ng-template" id="/settings.html">
			<div class="page-header">
				<h1>ÜBERSCHRIFT EINSTELLUNGEN</h1>
			</div>
			
			<div class="btn-group" role="group" aria-label="...">
				<button type="button" class="btn btn-default" ng-click="show = 'teams'">Mannschaften</button>
				<button type="button" class="btn btn-default" ng-click="show = 'tables'">Tabellen</button>
				<button type="button" class="btn btn-default" ng-click="show = '...'">...</button>
			</div>
			
			<div ng-show="show == 'teams'">
				Mannschaften
			</div>
			
			<div ng-show="show == 'tables'">
				Tabellen
			</div>
			
			<div ng-show="show == '...'">
				...
			</div>
			
			<a href="#/table" type="button" class="btn btn-default glyphicon glyphicon-list">Tabelle</a>
		</script>
		<!-- ENDE settings.html -->
	</body>
</html>